<!DOCTYPE html>
  <head>
    <title>팜팜멘토 관리자</title>
    <%= stylesheet_link_tag    "admin", media: "all", "data-turbolinks-track" => true %>
    <%= javascript_include_tag "admin", "data-turbolinks-track" => true %>
    <!--[if lte IE 8]><script language="javascript" type="text/javascript" src="http://flot.googlecode.com/svn/trunk/excanvas.min.js"></script><![endif]-->
    <!-- HTML5 shim, for IE6-8 support of HTML5 elements -->
    <!--[if lt IE 9]>
        <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->
    <%= csrf_meta_tag %>
  </head>
    
  <body>
    <div class="navbar navbar-fixed-top">
      <div class="navbar-inner">
        <div class="container-fluid">
            <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse"> <span class="icon-bar"></span>
             <span class="icon-bar"></span>
             <span class="icon-bar"></span>
            </a>
            <a class="brand" href="#">팜팜멘토</a>
            <div class="nav-collapse collapse">
              <ul class="nav pull-right">
                <li class="dropdown">
                  <a href="#" role="button" class="dropdown-toggle" data-toggle="dropdown">
                    <% if user_signed_in? %>
                      <i class="icon-user"></i><%= current_user.email %><i class="caret"></i>
                    <% end %>
                  </a>
                  <ul class="dropdown-menu">
                    <li>
                      <%= link_to "Sign out", destroy_user_session_path, method: :delete, class: "signout" %>
                    </li>
                  </ul>
                </li>
              </ul>
                <ul class="nav">
                    <li class="dropdown">
                      <a href="#" data-toggle="dropdown" class="dropdown-toggle">
                        회원<b class="caret"></b>
                      </a>
                      <ul class="dropdown-menu" id="menu1">
                        <li>
                          <%= link_to "회원목록", admin_users_path %>
                      </li>
                      <li><a href="#">멘토목록</a></li>
                      <li>
                        <%= link_to "계정등록", new_admin_user_path %>
                      </li>
                    </ul>
                  </li>
                  <li class="dropdown">
                      <a href="#" data-toggle="dropdown" class="dropdown-toggle">
                        멘토<b class="caret"></b>
                      </a>
                      <ul class="dropdown-menu" id="menu1">
                          <li><a href="#">멘토목록</a></li>
                          <li>
                            <%= link_to "멘토링후기", admin_reviews_path %>
                          </li>
                      </ul>
                    </li>
                    <li class="dropdown">
                      <a href="#" data-toggle="dropdown" class="dropdown-toggle">
                        배너<b class="caret"></b>
                      </a>
                        <ul class="dropdown-menu" id="menu1">
                            <li><%= link_to "리스트", admin_banners_path %></li>
                            <li><%= link_to "새등록", new_admin_banner_path %></li>
                        </ul>
                    </li>
                    <li class="dropdown">
                      <a href="#" role="button" class="dropdown-toggle" data-toggle="dropdown">
                        게시글<i class="caret"></i>
                      </a>
                        <ul class="dropdown-menu">
                          <li>
                            <%= link_to "공지사항", admin_notices_path %>
                          </li>
                          <li>
                            <%= link_to "FAQ", admin_answers_path %>
                          </li>
                          <li>
                            <%= link_to "Q&A", admin_questions_path %>
                          </li>
                        </ul>
                    </li>
                </ul>
            </div>
            <!--/.nav-collapse -->
        </div>
    </div>
</div>
<div class="container-fluid">
    <div class="row-fluid">
        <div class="span3" id="sidebar">
            <ul class="nav nav-list bs-docs-sidenav nav-collapse collapse">
                <li>
                  <%= link_to admin_jobs_path do %>
                    <i class="icon-chevron-right"></i>멘토링 프로그램 관리
                  <% end %>
                </li>
                <li>
                  <%= link_to admin_users_path({group: "mentor"}) do %>
                    <i class="icon-chevron-right"></i>
                    <span class="<%= user_role_badge("mentor") %>">멘토관리</span>
                  <% end %>
                </li>
                <li>
                  <%= link_to admin_users_path({group: "mentee"}) do %>
                    <i class="icon-chevron-right"></i>
                    <span class="<%= user_role_badge("mentee") %>">멘티관리</span>
                  <% end %>
                </li>
                <li>
                  <%= link_to admin_notices_path do %>
                    <i class="icon-chevron-right"></i>공지사항
                  <% end %>
                </li>
                <li>
                  <%= link_to admin_banners_path do %>
                    <i class="icon-chevron-right"></i>배너관리
                  <% end %>
                </li>
                <li>
                  <%= link_to admin_answers_path do %>
                    <i class="icon-chevron-right"></i>FAQ
                  <% end %>
                </li>
                <li>
                  <%= link_to admin_questions_path do %>
                    <i class="icon-chevron-right"></i>QNA
                  <% end %>
                </li>
                <li>
                  <%= link_to admin_reviews_path do %>
                    <i class="icon-chevron-right"></i>멘토후기
                  <% end %>
                </li>
                <li>
                  <%= link_to admin_users_path({group: "admin"}) do %>
                    <i class="icon-chevron-right"></i>
                    <span class="<%= user_role_badge("admin") %>">관리자 계정</span>
                  <% end %>
                </li>
                <li>
                  <%= link_to root_path do %>
                    <i class="icon-chevron-right"></i>사이트 바로가기(홈)
                  <% end %>
                </li>
            </ul>
        </div>
        <!--/span-->
        <div class="span9" id="content">
          <div>
            <p class="flash_notice"><%= notice %></p>
            <p class="flash_alert"><%= alert %></p>
          </div>
          <%= yield %>
        </div>
      </div>
      <hr>
      <footer>
          <p>&copy; Vincent Gabriel 2013</p>
      </footer>
    </div>
    <!--/.fluid-container-->
  </body>

</html>