<!DOCTYPE html>
    <head>
        <title>팜팜멘토</title>
        <%= stylesheet_link_tag    "admin", media: "all", "data-turbolinks-track" => true %>
        <%= javascript_include_tag "admin", "data-turbolinks-track" => true %>
        <!--[if lte IE 8]><script language="javascript" type="text/javascript" src="http://flot.googlecode.com/svn/trunk/excanvas.min.js"></script><![endif]-->
        <!-- HTML5 shim, for IE6-8 support of HTML5 elements -->
        <!--[if lt IE 9]>
            <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
        <![endif]-->
      <%= csrf_meta_tag %>
    </head>
    
    <body>
        <div class="navbar navbar-fixed-top">
            <div class="navbar-inner">
                <div class="container-fluid">
                    <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse"> <span class="icon-bar"></span>
                     <span class="icon-bar"></span>
                     <span class="icon-bar"></span>
                    </a>
                    <a class="brand" href="#">팜팜멘토</a>
                    <div class="nav-collapse collapse">
                      <ul class="nav pull-right">
                        <li class="dropdown">
                          <a href="#" role="button" class="dropdown-toggle" data-toggle="dropdown">
                            <% if user_signed_in? %>
                              <i class="icon-user"></i><%= current_user.email %><i class="caret"></i>
                            <% end %>
                          </a>
                          <ul class="dropdown-menu">
                            <li>
                              <%= link_to "Sign out", destroy_user_session_path, method: :delete, class: "signout" %>
                            </li>
                          </ul>
                        </li>
                      </ul>
                        <ul class="nav">
                            <li class="dropdown">
                                <a href="#" data-toggle="dropdown" class="dropdown-toggle">회원<b class="caret"></b></a>
                                <ul class="dropdown-menu" id="menu1">
                                    <li>
                                      <%= link_to "내 정보 수정", mentor_user_path(current_user) %>
                                    </li>
                                    <!-- <li>
                                      <%#= link_to "회원탈퇴", mentor_users_path %>
                                    </li> -->
                                </ul>
                            </li>
                            <!-- <li class="dropdown">
                                <a href="#" role="button" class="dropdown-toggle" data-toggle="dropdown">게시글<i class="caret"></i></a>
                                <ul class="dropdown-menu">
                                    <li>
                                      <%#= link_to "공지사항", admin_notices_path %>
                                    </li>
                                    <li>
                                      <%#= link_to "FAQ", admin_answers_path %>
                                    </li>
                                    <li>
                                      <%#= link_to "Q&A", admin_questions_path %>
                                    </li>
                                </ul>
                            </li> -->
                        </ul>
                    </div>
                    <!--/.nav-collapse -->
                </div>
            </div>
        </div>
        <div class="container-fluid">
            <div class="row-fluid">
                <div class="span3" id="sidebar">
                    <ul class="nav nav-list bs-docs-sidenav nav-collapse collapse">
                        <li>
                          <%= link_to root_path do %>
                            <i class="icon-chevron-right"></i>사이트 바로가기(홈)
                          <% end %>
                        </li>
                        <li>
                          <%= link_to mentor_jobs_path do %>
                            <i class="icon-chevron-right"></i>멘토링 프로그램 등록
                          <% end %>
                        </li>
                        <li>
                          <%= link_to mentor_user_path(current_user) do %>
                            <i class="icon-chevron-right"></i>내 정보 관리
                          <% end %>
                        </li>
                        <!-- <li>
                          <%= link_to mentor_reviews_path do %>
                            <i class="icon-chevron-right"></i>멘토후기
                          <% end %>
                        </li> -->
                    </ul>
                </div>
                <!--/span-->
                <div class="span9" id="content">
                  <div>
                    <p class="flash_notice"><%= notice %></p>
                    <p class="flash_alert"><%= alert %></p>
                  </div>
                  <%= yield %>
                </div>
            </div>
            <hr>
            <footer>
                <p>&copy; Vincent Gabriel 2013</p>
            </footer>
        </div>
        <!--/.fluid-container-->
    </body>

</html>